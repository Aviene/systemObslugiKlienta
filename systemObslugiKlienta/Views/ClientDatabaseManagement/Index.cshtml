@model List<Tuple<string,string>>


@{
    ViewBag.Title = "Index";
}

<h2>Client Database Management</h2>

<div id="steps-nav">
    <div class="row">
        <ul class="nav nav-tabs nav-justified">
            <li role="presentation" id="step1-tab" class="active"><a href="#step1">Step 1: Database choosing</a></li>
            <li role="presentation" id="step2-tab" class="disabled"><a href="#step2">Step 2: People clustering method</a></li>
            <li role="presentation" id="step3-tab" class="disabled"><a href="#step3">Step 3: Algorithm input data</a></li>
            <li role="presentation" id="step4-tab" class="disabled"><a href="#step4">Step 4</a></li>
        </ul>
    </div>
</div>

<div id="steps-content">

    <div id="step1" class="tab">
        <div class="row step">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 div-huge-btn">
                    <a href="#" class="huge-btn huge-btn-default">
                        <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                        <span class="description shardName">@Html.DisplayFor(modelItem => item.Item2)</span>
                        <span class="hidden serverName">@Html.DisplayFor(modelItem => item.Item1)</span>
                    </a>
                </div>
            }

            <div class="col-lg-3 pull-right">
                <a href="#" class="btn btn-primary btn-lg btn-prev-next disabled next-step" id="step2-">Next step</a>
            </div>
        </div>
    </div>

    <div id="step2" class="tab">

        <div class="row step">

            <div class="col-lg-4 div-huge-btn">
                <a href="#" class="huge-btn huge-btn-default" id="0">
                    <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                    <span class="description">Total spent amount</span>
                </a>
            </div>

            <div class="col-lg-4 div-huge-btn">
                <a href="#" class="huge-btn huge-btn-default" id="1">
                    <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                    <span class="description">Number of transactions in time period</span>
                </a>
            </div>

            <div class="col-lg-4 div-huge-btn">
                <a href="#" class="huge-btn huge-btn-default" id="2">
                    <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                    <span class="description">Last transaction date</span>
                </a>
            </div>

            <div class="col-lg-3">
                <a href="#" class="btn btn-primary btn-lg btn-prev-next prev-step" id="step1-">Previous step</a>
            </div>

            <div class="col-lg-3 pull-right">
                <a href="#" class="btn btn-primary btn-lg btn-prev-next disabled next-step" id="step3-">Next step</a>
            </div>

        </div>

    </div>

    <div id="step3" class="tab">

        <div class="row step">

            <div class="col-lg-3" id="tables">
                
            </div>
            <div class="col-lg-3" id="columns">

            </div>

            <div class="col-lg-6" id="firstTenRows">

            </div>
        </div>
    </div>


    <div id="step4" class="tab">

        <div class="row step">

        </div>

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/Scripts/tabs.js")
    @Scripts.Render("~/Scripts/cdm-step1.js")
    @Scripts.Render("~/Scripts/cdm-step2.js")
    @Scripts.Render("~/Scripts/cdm-step3.js")
}
